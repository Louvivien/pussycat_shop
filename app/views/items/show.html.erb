<section class="slice slice-lg" id="sct-products">
    <div class="container">
        <div class="row">

            <div class="col-lg-6">

                <!-- Product gallery -->
                <div class="mb-5">
                    <a href="">
                        <%if @item.image.attached?%>
                            <%= image_tag @item.image.variant(resize: "550x400"), class: "img-fluid rounded shadow shadow-lg--hover"%>
                        <%end%>
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <form class="pl-lg-4">

                    <!-- Product title -->
                    <h1>Hi, I'm
                        <%=@item.title%> !</h1>

                    <!-- Product description -->
                    <div class="mt-4">
                        <small class="text-dark font-weight-bold d-block mb-2">Description:</small>
                        <p class="text-sm lh-150">
                            <%=@item.description%>
                        </p>
                    </div>


                    <!-- Rating stars -->
                    <p style="width: 170px"> Cute
                        <span class="static-rating static-rating-sm" style="float: right;">
                            <i class="star fas fa-star voted"></i>
                            <i class="star fas fa-star voted"></i>
                            <i class="star fas fa-star voted"></i>
                            <% if rand(0..2) == 0 %>
                            <i class="star fas fa-star voted"></i>
                            <i class="star fas fa-star voted"></i>
                            <% elsif rand(0..1) == 0%>
                            <i class="star fas fa-star voted"></i>
                            <i class="star fas fa-star"></i>
                            <% else %>
                            <i class="star fas fa-star"></i>
                            <i class="star fas fa-star"></i>
                            <% end %>

                        </span>
                    </p>
                    <p style="width: 170px"> Crazy
                        <span class="static-rating static-rating-sm" style="float: right;">
                            <i class="star fas fa-star voted"></i>
                            <i class="star fas fa-star voted"></i>
                            <i class="star fas fa-star voted"></i>
                            <i class="star fas fa-star"></i>
                            <i class="star fas fa-star"></i>
                        </span>
                    </p>

                    <!-- Quantity -->
                    <div class="mt-4">
                        <br>
                        <div class="d-flex">
                            <h3 class="d-block font-weight-bold text-dark mb-2" style="margin-top: 10px; margin-right: 10px;">
                                <%=@item.price%> €</h3>
                            <%if user_signed_in?%>
                            <%= link_to "Ajout au panier", item_cart_path(current_user.cart, @item), class: "btn btn-primary ml-3"%>
                            <%end%>
                        </div>
                    </div>

                    <!-- Product info -->
                </form>
            </div>
        </div>
        <div>
            <small class="d-block font-weight-bold text-dark">Maintaining</small>
            <ul class="list-unstyled list-icon">
                <li class="text-sm py-1">
                    <i class="fas fa-tshirt mr-3"></i>Natural fur, quality guarenteed since 1875
                </li>
                <li class="text-sm py-1">
                    <i class="fas fa-air-freshener mr-3"></i>Machine wash up to 30&deg;/86&deg;F gentle cycle (no for
                    real, don't wash your cat dude)
                </li>
                <li class="text-sm py-1">
                    <i class="fas fa-charging-station mr-3"></i>Iron up to 110&deg;C/230&deg;F (but you can iron it up
                    hahaha)
                </li>
            </ul>
        </div>
    </div>
</section>



<section>
    <div class="container">
        <div class="mb-md text-center">
            <h5>Suggested products</h5>
            <div class="fluid-paragraph text-center mt-2">
                <p class="lead lh-180">Check out these special cats that we think you might like</p>
            </div>
        </div>


        <div class="row">

            <% @sug_items.each do |item|%>
            <div class="col-lg-3 col-sm-6 col-sm-6 mb-5">
                <div class="card card-product no-border shadow shadow--hover">
                    <div class="card-image">
                        <a href="<%= item_path(item) %>">
                            <%if item.image.attached?%>
                                <%= image_tag item.image.variant(resize: "210x145"), class: "img-center img-index"%>
                            <%end%>

                            </a>

                        <span class="ribbon ribbon-right ribbon-primary rounded-circle">New</span>

                    </div>

                    <div class="card-body pt-0 text-center">
                        <a href="shop-product.html" class="card-title">
                            <%=item.title%></a>
                        <span class="card-price">
                            <%=item.price.to_i%>,00€</span>
                        <%= link_to "détails", item_path(item)%>
                    </div>
                </div>
            </div>
            <%end%>
        <%= image_tag("img/backgrounds/" + "clouds-bottom.png", alt: "clouds", style: "margin-bottom: -110px") %>

        </section>
