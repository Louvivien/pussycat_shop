<h1>Bienvenue sur la page de paiement</h1>

<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Montant à payer: <%=@total_price%> € </span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Payer mon panier"
          data-amount="<%=@total_price*100%>"
          data-locale="auto"
          data-currency="eur"="<%=current_user.email%>"
          data-email ="<%=current_user.email%>"></script>
<% end %>